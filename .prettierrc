{
  "plugins": ["@prettier/plugin-php"],
  "phpVersion": "8.2",
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "vueIndentScriptAndStyle": true,
  "htmlWhitespaceSensitivity": "ignore",
  "printWidth": 80,
  "overrides": [
    {
      "files": ["*.php"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.blade.php"],
      "options": {
        "prettier-ignore": true
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
